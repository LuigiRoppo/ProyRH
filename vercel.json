{
  "version": 2,
  "builds": [
    {
      "src": "control-horario/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "control-horario-backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "control-horario-backend/src/app.js" },
    { "src": "/(.*)", "dest": "control-horario/build/$1" }
  ]
}
